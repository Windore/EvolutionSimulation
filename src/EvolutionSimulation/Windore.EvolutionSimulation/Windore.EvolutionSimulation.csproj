    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Simulations2D\src\Windore.Simulations2D\Windore.Simulations2D.csproj" />
