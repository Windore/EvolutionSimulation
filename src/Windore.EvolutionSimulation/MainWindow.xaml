<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Windore.EvolutionSimulation.MainWindow"
        HasSystemDecorations="true"
        Width="300" Height="300"
        MaxWidth="300" MaxHeight="300"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        Title="Evolution Simulation">
        
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
        <TextBlock Text="Evolution Simulation I" FontSize="25" TextAlignment="Center"/>
        <Button Content="Start" Width="200" Height="30" Click="OnStartBtnClick"/>
        <Button Content="Settings" Width="200" Height="30" Click="OnSettingsBtnClick"/>
        <Button Content="Load settings from a file" Width="200" Height="30" Click="OnLoadSettingsFileBtnClick"/>
        <TextBlock Name="loadResultTB" Text="" FontSize="14" TextAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
